<div class="container-lg">
    <div class="row">
        <div class="col mb-3">
            <h5>{{__ "label.otherwebsite.title"}}</h5>
            <ul class="nav">
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="/{{getLocale}}/about" title="{{__ "about.linklabel"}}" class="nav-link p-0 text-muted">
                        {{~__ "about.linklabel"~}}
                    </a>
                </li>
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="/{{getLocale}}/contact" title="{{__ "contact.linklabel"}}" class="nav-link p-0 text-muted">
                        {{~__ "contact.linklabel"~}}
                    </a>
                </li>
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="/{{getLocale}}/tos" title="{{__ "tos.linklabel"}}" class="nav-link p-0 text-muted">
                        {{~__ "tos.linklabel"~}}
                    </a>
                </li>
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="/{{getLocale}}/languages" title="{{__ "languages.linklabel"}}"
                        class="nav-link p-0 text-muted">
                        {{~__ "languages.linklabel"~}}
                    </a>
                </li>
            </ul>
        </div>

        <div class="col mb-3">
            <h5>{{{__ "label.social"}}}</h5>
            <ul class="nav">
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="https://blog.wifis.org" target="_blank" title="{{__ "blog.linklabel"}}"
                        class="nav-link p-0 text-muted">
                        {{~__ "blog.linklabel"~}}
                    </a>
                </li>
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="https://twitter.com/wifis_org" target="_blank"
                        class="nav-link p-0 text-muted icon twitter_icon">
                        <span>twitter</span>
                    </a>
                </li>
                <li class="nav-item mb-2 ms-0 w-100">
                    <a href="https://www.facebook.com/wifis.org/" target="_blank"
                        class="nav-link p-0 text-muted icon facebook_icon">
                        <span>facebook</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="col-md-7 mb-3">
            <h5>
                <a href="/{{getLocale}}/press" class="nav-link">
                    {{~__ "label.footer.featured.text"~}}
                </a>
            </h5>

            <div class="press">
                {{#if (equals getLocale "de")}}
                    <a href="/{{getLocale}}/press" class="logo logo-golem"
                        title="{{label.footer.featured.hint}} golem.de"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-jetzt"
                        title="{{label.footer.featured.hint}} jetzt.sueddeutsche.de"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-basicthinking"
                        title="{{label.footer.featured.hint}} www.basicthinking.de"></a>
                {{/if}}

                {{#if (equals getLocale "en")}}
                    <a href="/{{getLocale}}/press" class="logo logo-boingboing"
                        title="{{label.footer.featured.hint}} www.BoingBoing.net"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-tnw"
                        title="{{label.footer.featured.hint}} www.TheNextWeb.com"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-rww"
                        title="{{label.footer.featured.hint}} www.ReadWriteWeb.com"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-hackernews"
                        title="{{label.footer.featured.hint}} HackerNews"></a>
                {{/if}}

                {{#if (equals getLocale "es")}}
                    <a href="/{{getLocale}}/press" class="logo logo-wwwhatsnew"
                        title="{{label.footer.featured.hint}} wwwhatsnew.com"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-20minutos"
                        title="{{label.footer.featured.hint}} blogs.20minutos.es"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-muyinternet"
                        title="{{label.footer.featured.hint}} www.muyinternet.com"></a>
                    <a href="/{{getLocale}}/press" class="logo logo-bandaancha"
                        title="{{label.footer.featured.hint}} bandaancha.eu"></a>
                {{/if}}

                {{#if (equals getLocale "ru")}}
                    <a href="/{{getLocale}}/press" class="logo logo-lifehacker_ru"
                        title="{{label.footer.featured.hint}} LifeHacker.ru"></a>
                {{/if}}

                {{#if (or (equals getLocale "fr") (equals getLocale "it") (equals getLocale "nl") (equals getLocale "ms"))}}
                    <a href="/{{getLocale}}/press" class="nav-link p-0 text-muted">
                        {{~__ "press.linklabel"~}}
                    </a>
                {{/if}}
            </div>
        </div>
    </div>

    <div class="d-flex flex-column flex-sm-row justify-content-between py-3 border-top text-muted">
        <p>{{{__ "label.footer.text"}}}</p>
        <ul class="list-unstyled d-flex w-30">
            <li class="ms-3">
                <a class="link-dark icon github_icon nav-link text-muted text-nowrap w-100" rel='nofollow'
                    href="https://github.com/madmaxmatze/wifis.org">
                    <span>github</span>
                </a>
            </li>
        </ul>
    </div>
</div>