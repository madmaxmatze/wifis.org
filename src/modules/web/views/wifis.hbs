    <div class="tip">
        {{#replace "{1}" "<ul>
                        <li><a target='_blank' href='//www.wifis.org/example'>www.wifis.org/example</a></li>
                        <li><a target='_blank' href='//wifis.org/example'>wifis.org/example</a></li>
