{{assign "title" (__ "wifis.headline")}}

<h2>{{{__ "wifis.headline"}}}</h2>

{{#if user}}
<div class="tipsContainer" style="display: none">
    {{!-- 
    <div class="tip">
        {{#replace "{0}" (INVITE_LINK)}}
             {{{__ "wifis.tips.0"}}}
        {{/replace}}
    </div>
