    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-M6XKF9N');</script>
    <!-- End Google Tag Manager -->

    <link href="//fonts.googleapis.com/css?family=Bevan" rel="stylesheet" type="text/css">
    {{!-- TODO: Update Boostrap to latest version --}}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
</head>

<body>
    {{> navi }}

    <div class="container maincontainer {{#if viewname}}{{viewname}}_page{{/if}}">
        <div class="content contenttop">
            {{{body}}}
            <div class='clear'></div>
        </div>
    </div>

    {{> footer }}
    
    <script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'></script>
    <script type='text/javascript' src='/_js/config_{{getLocale}}.js?{{version}}'></script>
    <script type='text/javascript' src='/js/libs/bootstrap-dropdown.js?{{version}}'></script>
    <script type='text/javascript' src='/js/libs/jquery.timeout.js?{{version}}'></script>
    <script type='text/javascript' src='/js/jquery.wifis.form.js?{{version}}'></script>
    <script type='text/javascript' src='/js/jquery.wifis.general.js?{{version}}'></script>
    <script type='text/javascript' src='/js/jquery.wifis.menu.js?{{version}}'></script>
