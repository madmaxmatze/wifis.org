<a href="/p/login" class="wifisButton join">{{& __ "homepage.joinButton"}}</a>

<div class="wifilogo sprite"></div>

{{& __ "homepage.text.0"}}

<ul class="teasers">
    {{#each translations.homepage.teasers}}
    <li class="teaser{{concat @index 1}}">
        <div class="number"><span>{{concat @index 1}}</span></div>
        <div class="text">{{& this}}</div>
        <div class="image">
            <a href="/example" title="...">
                <img src="/assets/img/teaser{{concat @index 1}}_small.png"
                    alt="..." width="210" height="210" />
            </a>
        </div>
    </li>
    {{/each}}
</ul>

{{& __ "homepage.text.1"}}

<div class="wifichecker">
    <div class="text">
        {{& __ "homepage.wifichecker"}}
    </div>





    <form id="addWifiForm" class="form-inline" method="post" autocomplete="off" action="${CONST.URL_PATH_WIFIS}">

        <div class="control-group ">
            <div class="input-prepend input-append">
                <span class="add-on">wifis.org/</span> <input class="addWifiInput" type="text" name="wifiid" value=""
                    placeholder="{{__ "wifis.enternew"}}" title="{{__ "wifis.enternew"}}" />
                <button class="btn" type="submit" id="addWifiSave">
                    {{__ "wifis.save"}}
                </button>
                <span class="add-on loader">&#160;&#160;&#160;</span>
            </div>
            <span class="help-inline">
                <c:if test="${error != null}">
                    <spring:message code="wifis.error.${error}" />
                </c:if>
            </span>
        </div>
    </form>

</div>